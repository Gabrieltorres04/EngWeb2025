extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1= title
    .w3-container
      .w3-row.w3-margin-top
        .w3-col.s3
          p Nome:
        .w3-col.s9
          p= aluno.nome
          
      .w3-row
        .w3-col.s3
          p GitHub:
        .w3-col.s9
          p= aluno.git
          
      .w3-row
        .w3-col.s3
          p TPCs:
        .w3-col.s9
          ul.w3-ul
            li TPC1: #{aluno.tpc1 ? 'Concluído' : 'Não Concluído'}
            li TPC2: #{aluno.tpc2 ? 'Concluído' : 'Não Concluído'}
            li TPC3: #{aluno.tpc3 ? 'Concluído' : 'Não Concluído'}
            li TPC4: #{aluno.tpc4 ? 'Concluído' : 'Não Concluído'}
            li TPC5: #{aluno.tpc5 ? 'Concluído' : 'Não Concluído'}
            li TPC6: #{aluno.tpc6 ? 'Concluído' : 'Não Concluído'}
            li TPC7: #{aluno.tpc7 ? 'Concluído' : 'Não Concluído'}
            li TPC8: #{aluno.tpc8 ? 'Concluído' : 'Não Concluído'}
      
      .w3-row
        .w3-col.s3
          p Nota do Teste:
        .w3-col.s9
          p= aluno.teste || 'Não avaliado'
          
      .w3-row.w3-margin-bottom
        .w3-col.s3
          p Nota da Prática:
        .w3-col.s9
          p= aluno.pretica || 'Não avaliado'
          
      .w3-row.w3-margin-bottom
        .w3-col.s12
          a.w3-btn.w3-blue.w3-margin-right(href='/alunos') Voltar
          a.w3-btn.w3-amber.w3-margin-right(href=`/alunos/edit/${aluno._id}`) Editar
          a.w3-btn.w3-red(href=`/alunos/delete/${aluno._id}` onclick="return confirm('Tem certeza que deseja excluir este aluno?')") Apagar
          
    footer.w3-container.w3-blue
      address Generated by EW2025