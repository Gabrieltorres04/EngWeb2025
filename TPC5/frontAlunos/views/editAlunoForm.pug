extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Editar Aluno
    
    form.w3-container(method="POST" action=`/alunos/edit/${aluno._id}`)
      input(type="hidden" name="_id" value=aluno._id)
      
      .w3-margin-top
        label Nome
        input.w3-input.w3-border(type="text" name="nome" required value=aluno.nome)
      
      .w3-margin-top
        label GitHub
        input.w3-input.w3-border(type="text" name="git" required value=aluno.git)
      
      .w3-margin-top
        label.w3-margin-right.w3-margin-bottom TPCs:
        .w3-row.w3-margin-top
          .w3-col.s3
            label TPC1
            input.w3-check(type="checkbox" name="tpc1" checked=aluno.tpc1)
          .w3-col.s3
            label TPC2
            input.w3-check(type="checkbox" name="tpc2" checked=aluno.tpc2)
          .w3-col.s3
            label TPC3
            input.w3-check(type="checkbox" name="tpc3" checked=aluno.tpc3)
          .w3-col.s3
            label TPC4
            input.w3-check(type="checkbox" name="tpc4" checked=aluno.tpc4)
        .w3-row.w3-margin-bottom
          .w3-col.s3
            label TPC5
            input.w3-check(type="checkbox" name="tpc5" checked=aluno.tpc5)
          .w3-col.s3
            label TPC6
            input.w3-check(type="checkbox" name="tpc6" checked=aluno.tpc6)
          .w3-col.s3
            label TPC7
            input.w3-check(type="checkbox" name="tpc7" checked=aluno.tpc7)
          .w3-col.s3
            label TPC8
            input.w3-check(type="checkbox" name="tpc8" checked=aluno.tpc8)
      
      .w3-margin-top
        label Nota do Teste
        input.w3-input.w3-border(type="number" name="teste" min="0" max="20" step="0.1" value=aluno.teste)
      
      .w3-margin-top
        label Nota da Pr√°tica
        input.w3-input.w3-border(type="number" name="pretica" min="0" max="20" step="0.1" value=aluno.pretica)
      
      .w3-margin-top.w3-margin-bottom
        button.w3-btn.w3-blue.w3-margin-right(type="submit") Guardar
        a.w3-btn.w3-red(href="/alunos") Cancelar
    
    footer.w3-container.w3-blue
      address Generated by EW2025