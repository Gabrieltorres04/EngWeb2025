extends layout

block content
  .w3-card-4 
    header.w3-container.w3-blue
      h1= title 
    .w3-container 
      .w3-right.w3-margin-bottom
        a.w3-btn.w3-green(href='/alunos/registo/novo') Adicionar Aluno
      table.w3-table-all 
        tr 
          th Nome 
          th Git
          th TPC1
          th TPC2 
          th TPC3
          th TPC4
          th TPC5
          th TPC6
          th TPC7
          th TPC8
          th Teste
          th Pratica
          th Operações
        each a in lalunos 
          tr 
            td= a.nome
            td= a.git
            td
              if a.tpc1
                a.w3-btn.w3-tiny.w3-green(href=`/alunos/tpc/${a._id}/1`) ✓
              else
                a.w3-btn.w3-tiny.w3-red(href=`/alunos/tpc/${a._id}/1`) ✗
            td
              if a.tpc2
                a.w3-btn.w3-tiny.w3-green(href=`/alunos/tpc/${a._id}/2`) ✓
              else
                a.w3-btn.w3-tiny.w3-red(href=`/alunos/tpc/${a._id}/2`) ✗
            td
              if a.tpc3
                a.w3-btn.w3-tiny.w3-green(href=`/alunos/tpc/${a._id}/3`) ✓
              else
                a.w3-btn.w3-tiny.w3-red(href=`/alunos/tpc/${a._id}/3`) ✗
            td
              if a.tpc4
                a.w3-btn.w3-tiny.w3-green(href=`/alunos/tpc/${a._id}/4`) ✓
              else
                a.w3-btn.w3-tiny.w3-red(href=`/alunos/tpc/${a._id}/4`) ✗
            td
              if a.tpc5
                a.w3-btn.w3-tiny.w3-green(href=`/alunos/tpc/${a._id}/5`) ✓
              else
                a.w3-btn.w3-tiny.w3-red(href=`/alunos/tpc/${a._id}/5`) ✗
            td
              if a.tpc6
                a.w3-btn.w3-tiny.w3-green(href=`/alunos/tpc/${a._id}/6`) ✓
              else
                a.w3-btn.w3-tiny.w3-red(href=`/alunos/tpc/${a._id}/6`) ✗
            td
              if a.tpc7
                a.w3-btn.w3-tiny.w3-green(href=`/alunos/tpc/${a._id}/7`) ✓
              else
                a.w3-btn.w3-tiny.w3-red(href=`/alunos/tpc/${a._id}/7`) ✗
            td
              if a.tpc8
                a.w3-btn.w3-tiny.w3-green(href=`/alunos/tpc/${a._id}/8`) ✓
              else
                a.w3-btn.w3-tiny.w3-red(href=`/alunos/tpc/${a._id}/8`) ✗
            td= a.teste
            td= a.pretica
            td 
              a.w3-btn.w3-blue.w3-margin-right(href=`/alunos/${a._id}`) Ver
              a.w3-btn.w3-amber.w3-margin-right(href=`/alunos/edit/${a._id}`) Editar
              a.w3-btn.w3-red(href=`/alunos/delete/${a._id}` onclick="return confirm('Tem certeza que deseja excluir este aluno?')") Apagar
    
    footer.w3-container.w3-blue 
